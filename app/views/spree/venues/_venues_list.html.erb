<div id="locationSession" class="hide"><%= session[:location] %></div>
<div id="venues-near-by" >
  <% letters = ("A".."E").to_a %>
  <% counter = 0 %>
  <% @venues_near_by.try(:each) do |v| %>
    <div class="venue-box">
      <div class="letter letters"><span><%= letters[counter] %></span></div>
      <div class="venue-info">
        <label>
          <input type="checkbox">
        </label><span>save as my default store</span>
        <h3><%= v.name %></h3>
        <p class="store-code">Store Code:  <%= v.store_code %></p>
        <p class="rank" id=<%= v.rank %>><%= v.rank %></p>
        <p><%= v.street_address %></p>
        <p><%= v.city %>, <%= v.state %> <%= v.zip %></p>
        <p class="phone"><%= v.phone %></p>
        <p class="store-hours">Store Hours <i class="fa fa-heart"></i></p>
        <p class="hide"><%= v.venue_hours %> </p>
        <p class="store-wesite"><%= link_to "Visit Store Website", "http://#{v.website}"
         %></p>
        <p class="directions">Get Directions</p>
      </div>
      </div>
    <% counter += 1 %>
    <script>
      var map = new GMaps({
        el: '#map',
        lat: <%= session[:location][0] %>,
        lng: <%= session[:location][1] %>,
        zoom: 11
      });
    </script>
<% end %>
</div>
<script id="venues-template" type="text/x-handlebars-template">
  {{#each this}}
    <div class="venue-box">
      <div class="letter letters"><span>{{letter}}</span></div>
      <div class="venue-info">
        <label>
          <input type="checkbox">
        </label><span>save as my default store</span>
        <h3>{{name}}</h3>
        <p class="store-code">Store Code: {{store_code}}</p>
        <p class="rank" id={{rank}}>{{rank}}</p>
        <p>{{street_address}}</p>
        <p>{{city}}, {{state}} {{zip}}</p>
        <p class="phone">{{phone}}</p>
        <p class="store-hours">Store Hours <i class="fa fa-heart"></i></p>
        <p class="hide">{{venue_hours}}</p>
        <p class="store-wesite"><a href={{website}}>Visit Store Website</a></p>
        <p class="directions">Get Directions</p>
      </div>
      </div>
  {{/each}}
</script>
